function toyShop(tripPrice, puzzle, talkingDoll, teddyBear, minion, truck) { 
    let totalToySum = puzzle * 2.6 + talkingDoll * 3 + teddyBear * 4.1 + minion * 8.2 + truck * 2;
    let numOfToys = puzzle + talkingDoll + teddyBear + minion + truck;
    
    let discount = 0;
    if(numOfToys >= 50) {
        discount = 0.25 * totalToySum;
    }
    
    let finalPrice = totalToySum - discount;
    let rent = 0.10 * finalPrice;
    let revenue = finalPrice - rent;

    if(revenue >= tripPrice) {
        let moneyLeft = (revenue - tripPrice).toFixed(2);
        console.log(`Yes! ${moneyLeft} lv left.`);
    } else {
        let neededMoney = (tripPrice - revenue).toFixed(2);
        console.log(`Not enough money! ${neededMoney} lv needed.`);
    }
}
