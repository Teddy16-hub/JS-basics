function GodzillaVsKong(movieBudget, numOfActs, clothingPrice) 
{
    let decor = 0.10 * movieBudget;
    let totalClothingPrice = numOfActs * clothingPrice;
    if (numOfActs >= 150) 
    {
        totalClothingPrice *= 0.90;
    }
    let totalMoneyForTheMovie = decor + totalClothingPrice;
    if (totalMoneyForTheMovie > movieBudget) 
    {
        let neededMoney = (totalMoneyForTheMovie - movieBudget).toFixed(2);
        console.log("Not enough money!");
        console.log(`Wingard needs ${neededMoney} leva more.`);
    } 
    else 
    {
        let moneyLeft = (movieBudget - totalMoneyForTheMovie).toFixed(2);
        console.log("Action!");
        console.log(`Wingard starts filming with ${moneyLeft} leva left.`);
    }
}
